<Window x:Class="TestWpfMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="160" Width="240">
    <Grid HorizontalAlignment="Center" Width="218" Height="144" VerticalAlignment="Top">
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSendMeil" Content="Send" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="120" Click="SendButton_Click"/>
        <TextBlock x:Name="tbkLogin" HorizontalAlignment="Left" Margin="10,5,0,0" Text="Login" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkPassword" HorizontalAlignment="Left" Margin="10,51,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
